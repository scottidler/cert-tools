-----END CERTIFICATE-----
EOF

true | openssl s_client -connect "$COMMON_NAME:443" 2>/dev/null | openssl x509 -in /dev/stdin >"$CERT_NAME.crt"
modhash=$(openssl x509 -in "$CERT_NAME.crt" -modulus -noout | openssl md5 | awk '{print $2}')
modhash_data=$(./modcert "$CERT_DIR" | grep "$modhash")

# shellcheck disable=SC2034
echo "$modhash_data" | while read modulus ssltype filename; do
	ext="${EXTS[$ssltype]}"
	"$CMD" "$filename" "$CERT_NAME.$ext"
done

echo "$INTERMEDIATE" >>"$CERT_NAME.crt"
